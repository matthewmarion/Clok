{
  "name": "electron-react",
  "version": "1.0.0",
  "description": "Electron app using React, Webpack 4 and Jest",
  "main": "main.js",
  "scripts": {
    "build:dev": "webpack --mode development --config webpack.config.js",
    "start": "electron ./dist/main.js",
    "build:test": "webpack --config webpack.tests.config.js",
    "test": "jest",
    "lint": "eslint ./src/**/*.jsx",
    "fixlint": "eslint ./src/**/*.jsx --fix"
  },
  "keywords": [
    "Electron",
    "React",
    "Webpack",
    "Jest"
  ],
  "author": "Matt Marion",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "copy-webpack-plugin": "^4.5.0",
    "css-loader": "^0.28.10",
    "electron": "^1.7.9",
    "eslint": "^4.18.2",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^3.0.6",
    "jest": "^21.2.1",
    "jest-junit": "^3.4.0",
    "json-loader": "^0.5.7",
    "style-loader": "^0.20.2",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0"
  },
  "jest": {
    "testRegex": "/__tests__/.*\\.jsx?",
    "testResultsProcessor": "./node_modules/jest-junit"
  }
}
